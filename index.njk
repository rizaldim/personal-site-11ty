<h1>Rizaldi Martaputra's Personal Website</h1>

<section class="l-stack-small">
	<h2>Posts</h2>
	<ol>
		{% for post in collections.posts %}
			<li>
				<a href="{{ post.url | url }}">
					{{ post.data.title }}
				</a>&nbsp;
				<time datetime="{{ post.date | readableDate("yyyy-LL-dd") }}">
					({{ post.date | readableDate("LLL dd, yyyy") }})
				</time>
			</li>
		{% endfor %}
	</ol>
</section>
